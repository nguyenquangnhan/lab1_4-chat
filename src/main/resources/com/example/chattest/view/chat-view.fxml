<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chattest.controller.ChatController">
    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #f0f5f5;" spacing="10.0">
            <children>
                <VBox>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Danh bạ" textFill="#0084ff">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <Button fx:id="reloadButton" mnemonicParsing="false" onAction="#onReloadContactsClick" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #e0e0e0; -fx-background-radius: 15;" text="↻" />
                            </children>
                        </HBox>
                        <ListView fx:id="contactList" prefHeight="200.0" prefWidth="200.0" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>

                <VBox VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Nhóm" textFill="#0084ff">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <HBox spacing="5.0" style="-fx-padding: 5 0 5 0;">
                            <children>
                                <TextField fx:id="groupNameField" promptText="Tên nhóm mới..." HBox.hgrow="ALWAYS" />
                                <Button fx:id="createGroupButton" mnemonicParsing="false" onAction="#onCreateGroupClick" text="Tạo" />
                            </children>
                        </HBox>
                        <ListView fx:id="groupList" prefHeight="250.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                    <children>
                        <Label fx:id="currentChatUser" text="Chọn một cuộc trò chuyện" textFill="#0084ff">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="15.0" />
                    </padding>
                </HBox>
            </top>
            <bottom>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="10.0" style="-fx-background-color: #ffffff;">
                    <children>

<!--                        <Button fx:id="sendFileButton" mnemonicParsing="false" onAction="#onSendFileClick" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 20; -fx-padding: 0;" text="📎">-->
<!--                            <font>-->
<!--                                <Font size="18.0" />-->
<!--                            </font>-->
<!--                        </Button>-->
                        <TextField fx:id="messageInput" onAction="#onSendButtonClick" prefHeight="40.0" promptText="Nhập tin nhắn..." style="-fx-background-radius: 20;" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendButtonClick" prefHeight="40.0" prefWidth="70.0" style="-fx-background-color: #0084ff; -fx-background-radius: 20;" text="Gửi" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </HBox>
            </bottom>
            <center>
                <ScrollPane fx:id="chatScrollPane" hbarPolicy="NEVER" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #ffffff;" vbarPolicy="ALWAYS">
                    <content>
                        <VBox fx:id="chatBox" prefWidth="580.0" spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>